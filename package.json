{
  "name": "micro-starter",
  "version": "0.0.1",
  "description": "Start your micro app",
  "main": "index.js",
  "repository": "samtgarson/micro-starter",
  "author": "samtgarson@gmail.com",
  "license": "MIT",
  "dependencies": {
    "babel-preset-latest": "^6.16.0",
    "micro": "^6.1.0"
  },
  "devDependencies": {
    "ava": "^0.17.0",
    "babel-core": "^6.21.0",
    "babel-loader": "^6.2.10",
    "babel-polyfill": "^6.20.0",
    "babel-preset-stage-2": "^6.18.0",
    "babel-register": "^6.18.0",
    "eslint": "^3.13.1",
    "eslint-config-samtgarson": "^0.0.2",
    "request": "^2.79.0",
    "request-promise": "^4.1.1",
    "source-map-support": "^0.4.9",
    "test-listen": "^1.0.0",
    "webpack": "2",
    "xo": "^0.17.1"
  },
  "scripts": {
    "start": "micro .",
    "build": "node_modules/.bin/webpack",
    "test": "ava && xo"
  },
  "xo": {
    "ignores": [
      "index.js"
    ],
    "extends": "samtgarson"
  },
  "babel": {
    "presets": [
      "latest",
      "stage-2"
    ]
  },
  "ava": {
    "files": [
      "test/**/*.test.js"
    ],
    "source": [
      "src/**/*.js"
    ],
    "require": [
      "babel-register",
      "babel-polyfill"
    ],
    "babel": "inherit"
  }
}
